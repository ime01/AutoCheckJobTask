<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.product.ProductFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/car_right"
        android:layout_width="@dimen/car_pic_dimen"
        android:layout_height="@dimen/car_pic_dimen"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/car_left"
        android:layout_width="@dimen/car_pic_dimen"
        android:layout_height="@dimen/car_pic_dimen"
        android:layout_marginEnd="11dp"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/car_right"
        app:layout_constraintTop_toTopOf="@+id/car_right" />


    <ImageView
        android:id="@+id/car_interior"
        android:layout_width="@dimen/car_pic_dimen"
        android:layout_height="@dimen/car_pic_dimen"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintStart_toStartOf="@id/car_right"
        app:layout_constraintEnd_toEndOf="@id/car_right"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        app:layout_constraintTop_toBottomOf="@id/car_right" />

    <ImageView
        android:id="@+id/car_tyres"
        android:layout_width="@dimen/car_pic_dimen"
        android:layout_height="@dimen/car_pic_dimen"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintBottom_toBottomOf="@+id/car_interior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/car_interior"
        app:layout_constraintTop_toBottomOf="@+id/car_left" />
</androidx.constraintlayout.widget.ConstraintLayout>